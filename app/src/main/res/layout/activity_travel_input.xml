<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TravelInput">

    <Button
        android:id="@+id/driveButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/passButton"
        android:layout_toLeftOf="@+id/passButton"
        android:text="Register as Driver"
        android:background="#bfbfbf"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="419dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="172dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="67dp" />

    <Button
        android:id="@+id/passButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/calendarView"
        android:layout_alignRight="@id/calendarView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="44dp"
        android:background="#bfbfbf"
        android:text="Register as Passenger"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="419dp" />

    <TextView
        android:id="@+id/calendarDirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="524dp"
        android:text="Please select your travel date below"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="26dp" />

</RelativeLayout>